<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<filter>
		<filter-name>encodeFilter</filter-name>
		<filter-class>com.mbaclub.news.util.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodeFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>encodeFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>encodeFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.Register</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DownloadFile</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.DownloadFile</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>VerifyUsername</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.VerifyUsername</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>News</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.News</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FileUpload</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.FileUpload</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserAction</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.UserAction</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.Logout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>NewsManagerAction</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.NewsManagerAction</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CompanyManagerAction</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.CompanyManagerAction</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MemberManagerAction</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.MemberManagerAction</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Publish</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.Publish</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>NewsAudit</servlet-name>
		<servlet-class>com.mbaclub.news.servlet.NewsAudit</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>FileListAction</servlet-name>
    <servlet-class>com.mbaclub.news.servlet.FileListAction</servlet-class>
  </servlet>


	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownloadFile</servlet-name>
		<url-pattern>/download</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>VerifyUsername</servlet-name>
		<url-pattern>/verify_username</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>News</servlet-name>
		<url-pattern>/news</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FileUpload</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserAction</servlet-name>
		<url-pattern>/admin/user</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewsManagerAction</servlet-name>
		<url-pattern>/admin/news_manager</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CompanyManagerAction</servlet-name>
		<url-pattern>/admin/company_manager</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MemberManagerAction</servlet-name>
		<url-pattern>/admin/member_manager</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Publish</servlet-name>
		<url-pattern>/user/publish</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewsAudit</servlet-name>
		<url-pattern>/admin/news_audit</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>FileListAction</servlet-name>
    <url-pattern>/FileListAction</url-pattern>
  </servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/500.jsp</location>
	</error-page>
	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
</web-app>
